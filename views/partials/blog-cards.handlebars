<div class="card m-2">
  <div class="card-body">
    <h5 class="card-title">{{title}}
      Created by:{{firstName}}
      {{lastName}}
      Created at:{{formatDate createdAt}}</h5>
    <p class="card-text">{{description}}</p>

    <div class="text-center">
      <button
        name="comment-btn"
        class="btn btn-primary card-link"
      >Comment</button>
    </div>
    <div class="text-center my-2">
    </div>
  </div>
</div>