<div class="card-body">
  <h6 class="card-subtitle mb-2 text-muted">By
    {{user.first_name}}
    {{user.last_name}}</h6>
  <hr />
  <p class="card-text">{{message}}</p>
  <div class="mt-3">
    <p class="text-muted"><small>Created:
        {{formatDate createdAt}}</small></p>
    <p class="text-muted"><small>Updated:
        {{formatDate updatedAt}}</small></p>
  </div>
  {{#if myComment}}
    <div>
      <button
        class="btn btn-danger"
        id="{{id}}"
        name="delete-comment-btn"
      >Delete</button>
    </div>
  {{/if}}
</div>